
<% if session[:user_id] %>
  <% @users.each do |user| %>
    <% if user.id == session[:user_id] %>
      <h2>Hey, <%= user.firstname %>!</h2>
      <p>Let us know what's on your mind by creating a new post.</p>
    <% end %>
  <% end %>
<% else %>
  <h1>Welcome to the Rails Blog</h1>
  <p>Please sign in or create an account to start</p>
<% end %>
